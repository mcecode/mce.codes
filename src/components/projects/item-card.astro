---
import type { ImageMetadata } from "astro";

import Picture from "@components/ui/picture.astro";

type Props = {
  image: ImageMetadata & { alt: string };
  title: string;
  link: string;
  description: string;
};
const { image, title, link, description } = Astro.props;

if ((image.width / image.height).toFixed(2) !== "1.78") {
  throw new Error("Projects item card images should have a 16:9 aspect ratio.");
}
---

<li>
  <Picture {...image} />
  <h2>{title}</h2>
  <a href={link} target="_blank">{link}</a>
  <p>{description}</p>
</li>

<style lang="scss">
  li {
    display: grid;
    row-gap: v-size(2);
    margin-bottom: v-size(10);
    text-align: center;
  }
  h2 {
    margin-bottom: 0;
    font-weight: 500;
  }

  @include m-large {
    li {
      grid-template-areas: "picture title" "picture link" "picture description";
      grid-template-columns: 1fr 1fr;
      grid-template-rows: auto auto 1fr;
      column-gap: v-size(5);
      text-align: left;
    }
    picture {
      grid-area: picture;
    }
    h2 {
      grid-area: title;
    }
    a {
      grid-area: link;
    }
    p {
      grid-area: description;
    }
  }
</style>
