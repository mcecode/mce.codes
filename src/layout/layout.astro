---
import "@styles/global.scss";

import Footer from "@layout/body/footer.astro";
import Header from "@layout/body/header.astro";
import Fonts from "@layout/head/fonts.astro";

type Props = { title: string };
const { title } = Astro.props;
---

<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title} | mcecode</title>

    <Fonts />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />

    <script>
      (document.querySelector("html") as HTMLHtmlElement).classList.remove(
        "no-js"
      );
    </script>
  </body>
</html>
